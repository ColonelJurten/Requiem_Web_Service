<body style="background-color: #000000;">
    <div class="container mt-5">
        <form action="/login" method="post" class="text-center">
            <div class="card" style="max-width: 400px; margin: auto; background-color: #000000; border: 2px solid #F8CF40; color: #F8CF40;">
                <div class="card-header">
                    <h1>Iniciar Sesión</h1>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Ingresa tu usuario" style="border: 1px solid #F8CF40;" required>
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Ingresa tu password" style="border: 1px solid #F8CF40;" required>
                    </div>
                </div>
                <div class="card-footer" style="border-top: none;">
                    <button type="submit" class="btn btn-primary btn-block" style="background-color: #1C2143; color: #F8CF40; width: 100%;">Iniciar Sesión</button>
                </div>
            </div>
        </form>
    </div>
</body>

