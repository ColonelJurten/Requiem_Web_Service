<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>

<div class="container mt-4">
  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% usuarios.forEach((usuario) => { %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= usuario.nombre %></h5>
            <p class="card-text"><%= usuario.usuario %></p>
          </div>
          <div class="card-footer">
            <div class="d-grid">
              <a href="/editarUsuario/<%= usuario.id %>" class="btn btn-primary">Editar</a>
              <a href="/borrarUsuario/<%= usuario.id %>" class="btn btn-danger">Borrar</a>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
<%- include("../templates/pie") %>
