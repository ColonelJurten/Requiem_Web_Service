<%- include("../templates/encabezado") %>
<%- include("../templates/menuUsu") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="comment-form" style="border: 2px solid #FFD700; padding: 20px; border-radius: 10px;">
        <h2 style="color: #FFD700; margin-bottom: 20px;">Publicar Comentario</h2>
        <form action="/publicar" method="post">
          <div class="form-group">
            <label for="nombre" style="color: #FFD700;">Nombre:</label>
            <input type="text" id="nombre" name="nombre" class="form-control" style="background-color: #f0f0f0;" required>
          </div>

          <div class="form-group">
            <label for="texto" style="color: #FFD700;">Comentario:</label>
            <textarea id="texto" name="texto" rows="4" class="form-control" style="background-color: #f0f0f0;" required></textarea>
          </div>

          <button type="submit" class="btn btn-primary" style="background-color: #1C2143; color: #FFD700;">Publicar Comentario</button>
          
          
          <a href="/mostrarcomentarios" class="btn btn-primary" style="background-color: #1C2143; color: #FFD700;">Ver Comentarios</a>
        </form>
      </div>
    </div>
  </div>
</div>
