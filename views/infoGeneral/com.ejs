<%- include("../templates/encabezado") %>
<%- include("../templates/menuUsu") %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h2 style="color: #F8CF40;">Comentarios</h2>

      <% comentarios.forEach((comentario) => { %>
        <div class="card mb-3" style="background-color: black; border: 2px solid #F8CF40; border-radius: 10px;">
          <div class="card-body">
            <h5 class="card-title" style="font-size: 18px; color: #F8CF40;"><%= comentario.nombre %></h5>
            <p class="card-text" style="font-size: 16px; color: #F8CF40;"><%= comentario.comentario %></p>
          </div>
        </div>
      <% }); %>

    </div>
  </div>
</div>

