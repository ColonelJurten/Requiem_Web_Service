<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>
<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-4 g-4">
      <% productos.forEach((producto) => { %>
        <div class="col">
          <div class="card h-100">
            <img src="/imagesProducto/<%= producto.foto %>" class="card-img-top img-fluid rounded-start" alt="Imagen del producto">
            <div class="card-body">
              <h5 class="card-title"><%= producto.nombre %></h5>
              <p class="card-text"><%= producto.descripcion %></p>
              <p class="card-text"><strong>Precio:</strong> <%= producto.precio %> MX</p>
            </div>
            <div class="card-footer">
              <div class="d-grid">
                <a href="/editarProducto/<%= producto.id %>" class="btn btn-primary">Editar</a>
                <a href="/borrarProducto/<%= producto.id %>" class="btn btn-danger">Borrar</a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
</div>
<%- include("../templates/pie") %>
